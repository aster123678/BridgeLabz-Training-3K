//Sample Problem 1: School Results Application
//Class Diagram
@startuml
class Student {
  - name : String
  - grade : String
  + getSubjects() : List<Subject>
}

class Subject {
  - name : String
  - marks : int
}

class GradeCalculator {
  + calculateGrade(student: Student) : String
}

Student "1" -- "*" Subject : has >
GradeCalculator --> Student : computes
@enduml

